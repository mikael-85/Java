package exRetangulo;



import java.util.Scanner;

public class MenuRetangulo {
	Scanner entrada = new Scanner(System.in);
	Retangulo objetoRetangulo = new Retangulo();
	
	public void menuConta() {
		 
		int opcao = -1;	//, opcao2= -1; 
		while(opcao != 0) {
			//opcao = -1;
			System.out.println();
			System.out.println("-----------------------------------------");
			System.out.println("1 - Inserir base e altura");
			System.out.println("2 - Calcular area do retangulo");
			System.out.println("3 - Calcular o perimetro do retangulo");
			System.out.println("4 - Imprimir dados");
			System.out.println("0 - Sair");
			System.out.println("-----------------------------------------");
			System.out.println();
			opcao = Integer.parseInt(entrada.nextLine());

			switch (opcao) {
			case 1:
				break;

			case 2:
				break;

			case 3:
				break;

			default:
				break;

			}
			//break;
			//default: //Quando nao escolhido nenhum case volta a opcao padrao 
			//break;
		}
		
		entrada.close();
	}

}



